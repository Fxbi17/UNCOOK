<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 scroll mt-5">
      <div class ="mt-5">
        <h1><%= @dish.name %>

          <% if current_user.favorited?(@dish) %>
              <%= link_to dish_remove_from_favorite_path(@dish), class: "text-yellow" do %>
                <i class="fas fa-star"></i>
              <% end %>
          <% else %>
            <%= link_to dish_add_to_favorite_path(@dish), class: "text-yellow" do %>
              <i class="far fa-star"></i>
            <% end %>
          <% end %>

        </h1>
      </div>

      <p><%= @dish.description %></p>
      <p><%= simple_format h(@dish.recipie) %></p>

      <h2>Ingredients</h2>
        <% @dish.ingredient_dish.each do |ingredient_dish| %>
          <p><%= ingredient_dish.quantity %> <%= ingredient_dish.ingredient.name %></p>
        <% end %>

      <h2>Reviews</h2>
      <div>
        <%= link_to new_dish_review_path(@dish) do %>
          <i>Add a review</i>
        <% end %>
      </div>
      <br>
      <ul class="list-group">
        <% @dish.reviews.each do |review| %>
          <li>
            <%= review.rating %>‚≠ê
            <%= review.content %>
          </li><br>
        <% end %>
      </ul>
    </div>
    <div class="col-md-7 mt-5">
      <%= cl_image_tag @dish.photo.key, height: 700, width:700, crop: :fill %>
      <%# <svg class="bd-placeholder-img bd-placeholder-img-lg featurette-image img-fluid mx-auto" width="700" height="700"
          xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: 500x500" preserveAspectRatio="xMidYMid slice" focusable="false">
          <title>Placeholder</title>
          <rect width="100%" height="100%" fill="#eee"/>
          <text x="50%" y="50%" fill="#aaa" dy=".3em">500x500</text>
        </svg> %>
    </div>
  </div>
</div>
<hr class="divider mt-5">
