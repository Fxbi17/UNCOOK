<div class= "container mt-5">
  <div class ="mt-5"><h1>Dishes</h1></div>
  <%# <%= link_to "Add a new dishes", new_dishes_path %>
</div>

<div class = "m-5">
  <% @dishes.each do |dish| %>
    <h2><%= dish.name %></h2>
      <p><%= dish.description %></p>
      <h5>Recipie</h5>
      <p><%= dish.recipie %></p>
      <p>This recipie is made for <strong><%= dish.numpers %></strong> people</p>
      <%= link_to "See details", dish_path(dish), class: "btn btn-primary"%>
  <% end %>
</div>


