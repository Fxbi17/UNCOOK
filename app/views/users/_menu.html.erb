            <%= render "card", menu_dish: current_user.find_menu_dish_from_position(5) if current_user.find_menu_dish_from_position(5).present? %>
          </td>
          <td class="calendar-slot" data-sortable-target="list" data-position="6">
            <%= render "card", menu_dish: current_user.find_menu_dish_from_position(6) if current_user.find_menu_dish_from_position(6).present? %>
          </td>
          <td class="calendar-slot" data-sortable-target="list" data-position="7">
            <%= render "card", menu_dish: current_user.find_menu_dish_from_position(7) if current_user.find_menu_dish_from_position(7).present? %>
          </td>
        </tr>
        <tr class="calendar-row">
          <th class="calendar-header-row" scope="row">Dinner</th>
          <td class="calendar-slot" data-sortable-target="list" data-position="8">
            <%= render "card", menu_dish: current_user.find_menu_dish_from_position(8) if current_user.find_menu_dish_from_position(8).present? %>
          </td>
          <td class="calendar-slot" data-sortable-target="list" data-position="9">
            <%= render "card", menu_dish: current_user.find_menu_dish_from_position(9) if current_user.find_menu_dish_from_position(9).present? %>
